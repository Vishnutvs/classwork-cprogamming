def is_prime(num):
    """
    A helper function to determine if a given number is prime or not.
    """
    if num < 2:
        return False
    for i in range(2, int(num ** 0.5) + 1):
        if num % i == 0:
            return False
    return True

n = int(input("Enter the value of n: "))

count = 0
i = 2

prime_list = []
while count < n:
    if is_prime(i):
        prime_list.append(i)
        count += 1
    i += 1

print("The first", n, "prime numbers are:", prime_list)

nth_prime = prime_list[-1]
print("The", n, "th prime number is:", nth_prime)
Enter the value of n: 5
The first 5 prime numbers are: [2, 3, 5, 7, 11]
The 5 th prime number is: 11
